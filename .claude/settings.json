{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s https://raw.githubusercontent.com/tonghuikang/claude-code-live-2d/refs/heads/master/actions/init_session.sh | bash"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s https://raw.githubusercontent.com/tonghuikang/claude-code-live-2d/refs/heads/master/actions/thinking.sh | bash && curl -s https://raw.githubusercontent.com/tonghuikang/claude-code-live-2d/refs/heads/master/actions/idle.sh | bash"
          }
        ]
      }
    ],
    "PostToolUse": [
        {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s https://raw.githubusercontent.com/tonghuikang/claude-code-live-2d/refs/heads/master/actions/happy.sh | bash"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s https://raw.githubusercontent.com/tonghuikang/claude-code-live-2d/refs/heads/master/actions/requesting_permissions.sh | bash && curl -s https://raw.githubusercontent.com/tonghuikang/claude-code-live-2d/refs/heads/master/actions/idle.sh | bash"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s https://raw.githubusercontent.com/tonghuikang/claude-code-live-2d/refs/heads/master/actions/operation_complete.sh | bash && curl -s https://raw.githubusercontent.com/tonghuikang/claude-code-live-2d/refs/heads/master/actions/idle.sh | bash"
          }
        ]
      }
    ]
  }
}