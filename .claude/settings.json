{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "actions/init_session.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "source /tmp/claude_session_id 2>/dev/null || export SESSION_ID=fallback-$(date +%s) && actions/thinking.sh && actions/idle.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
        {
        "hooks": [
          {
            "type": "command",
            "command": "source /tmp/claude_session_id 2>/dev/null || export SESSION_ID=fallback-$(date +%s) && actions/happy.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "source /tmp/claude_session_id 2>/dev/null || export SESSION_ID=fallback-$(date +%s) && actions/requesting_permissions.sh && actions/idle.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "source /tmp/claude_session_id 2>/dev/null || export SESSION_ID=fallback-$(date +%s) && actions/operation_complete.sh && actions/idle.sh"
          }
        ]
      }
    ]
  }
}