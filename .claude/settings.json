{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "actions/init_session.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "actions/thinking.sh && actions/idle.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
        {
        "hooks": [
          {
            "type": "command",
            "command": "actions/happy.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "actions/requesting_permissions.sh && actions/idle.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "actions/operation_complete.sh && actions/idle.sh"
          }
        ]
      }
    ]
  }
}